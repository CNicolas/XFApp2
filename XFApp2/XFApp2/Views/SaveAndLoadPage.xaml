<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="XFApp2.Views.SaveAndLoadPage" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
	<StackLayout>
		<Entry Text="{Binding TextToSave}" Placeholder="Text To Save" />
		<Button Text="Save Text" Command="{Binding SaveTextCommand}" HorizontalOptions="Center" VerticalOptions="Center" />
		<Button Text="Load Text" Command="{Binding LoadTextCommand}" HorizontalOptions="Center" VerticalOptions="Center" />
    <Label Text="{Binding LoadedText}" />
	</StackLayout>
</ContentPage>